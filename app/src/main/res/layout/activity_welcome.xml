<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="codechamp.flashcard.WelcomeActivity">

    <TextView
            android:text="Welcome Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:text="@string/welcome_screen_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_welcome_login"
            android:layout_marginRight="8dp"
            android:onClick="login"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

    <Button
            android:text="@string/welcome_screen_offline_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_welcome_offline_mode"
            android:onClick="offlineMode"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toLeftOf="@+id/bt_welcome_login"
            android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>
